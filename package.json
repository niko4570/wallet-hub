{
  "name": "wallethub",
  "version": "0.1.0",
  "private": true,
  "description": "WalletHub monorepo for Solana mobile wallet hub MVP",
  "main": "index.js",
  "workspaces": [
    "apps/mobile",
    "apps/api",
    "packages/contracts"
  ],
  "scripts": {
    "dev:mobile": "pnpm --filter mobile run start",
    "web": "pnpm --filter mobile run web",
    "dev:api": "pnpm --filter api run start:dev",
    "build:contracts": "pnpm --filter contracts run build",
    "build:api": "pnpm --filter api run build",
    "build": "pnpm run build:contracts && pnpm run build:api",
    "lint": "pnpm --filter api run lint",
    "postinstall": "pnpm run build:contracts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niko4570/wallet-hub.git"
  },
  "keywords": [],
  "author": "Karly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/niko4570/wallet-hub/issues"
  },
  "homepage": "https://github.com/niko4570/wallet-hub#readme",
  "devDependencies": {
    "@react-native-community/cli": "^20.1.1",
    "@types/react": "~19.1.10",
    "turbo": "^2.1.3",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "react-native-screens": "4.23.0",
    "react-native-worklets": "0.7.3",
    "react-native-reanimated": "4.1.6"
  },
  "directories": {
    "doc": "docs"
  },
  "type": "commonjs",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@shopify/react-native-skia"
    ]
  }
}
